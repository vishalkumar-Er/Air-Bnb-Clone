<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <!-- Title -->
  <div class="col-8 offset-3">
    <h3><%= listing.title %></h3>
  </div>

  <!-- Listing Card -->
  <div class="card col-6 offset-3 show-card listing-card">
    <img
      src="<%= listing.image && listing.image.url ? listing.image.url : '' %>"
      class="card-img-top show-img"
      alt="listing_image"
    />

    <div class="card-body">
      <p class="card-text">
        <% if (listing.owner) { %>
          Owned by <i><%= listing.owner.username %></i>
        <% } else { %>
          Owned by <i>Unknown</i>
        <% } %>
        <br />

        <%= listing.description %>
        <br />

        &#8377;
        <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>
        <br />

        <%= listing.location %>
        <br />

        <%= listing.country %>
      </p>
    </div>
  </div>

  <br />

  <!-- Edit / Delete Buttons (Only Owner Can See) -->
  <% if (currUser && listing.owner && listing.owner._id.equals(currUser._id)) { %>
    <div class="btns">
      <a
        href="/listings/<%= listing._id %>/edit"
        class="btn btn-primary col-1 offset-3"
      >
        Edit
      </a>

      <form
        method="POST"
        action="/listings/<%= listing._id %>?_method=DELETE"
        class="d-inline"
      >
        <button class="btn btn-danger offset-4">Delete</button>
      </form>
    </div>
  <% } %>

  <!-- Reviews Section -->
  <div class="col-8 offset-3">
    <% if (currUser) { %>
      <br />
      <hr />
      <h4>Leave a Review</h4>

      <form
        action="/listings/<%= listing._id %>/reviews"
        method="POST"
        class="mb-3 mt-3 needs-validation"
        novalidate
      >
        <!-- Star Rating -->
        <fieldset class="starability-slot">
          <legend>Rating:</legend>

          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
          />

          <input type="radio" id="rate1" name="review[rating]" value="1" />
          <label for="rate1">1 star</label>

          <input type="radio" id="rate2" name="review[rating]" value="2" />
          <label for="rate2">2 stars</label>

          <input type="radio" id="rate3" name="review[rating]" value="3" />
          <label for="rate3">3 stars</label>

          <input type="radio" id="rate4" name="review[rating]" value="4" />
          <label for="rate4">4 stars</label>

          <input type="radio" id="rate5" name="review[rating]" value="5" />
          <label for="rate5">5 stars</label>
        </fieldset>

        <!-- Comment -->
        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comments</label>

          <textarea
            name="review[comment]"
            id="comment"
            cols="30"
            rows="5"
            class="form-control"
            required
          ></textarea>

          <div class="invalid-feedback">
            Please enter your review comment.
          </div>
        </div>

        <button class="btn btn-outline-dark">Submit</button>
      </form>
    <% } %>

    <hr />
    <p><b>All Reviews</b></p>

    <!-- Reviews List -->
    <div class="row mb-3">
      <% if (listing.reviews.length === 0) { %>
        <p>No reviews yet.</p>
      <% } %>

      <% for (let review of listing.reviews) { %>
        <div class="col-md-6 mb-3">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">
                @<%= review.author ? review.author.username : "Unknown User" %>
              </h5>

              <p
                class="starability-result card-text"
                data-rating="<%= review.rating %>"
              ></p>

              <p class="card-text"><%= review.comment %></p>

              <% if (
                currUser &&
                review.author &&
                review.author._id.equals(currUser._id)
              ) { %>
                <form
                  method="POST"
                  action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                >
                  <button class="btn btn-sm btn-danger">Delete</button>
                </form>
              <% } %>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>
